            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="closeButton" layoutX="85.0" layoutY="551.0" mnemonicParsing="false" onAction="#closeButtonOnAction" prefHeight="30.0" prefWidth="407.0" style="-fx-background-color: #77f56a;" text="Close and back to Login">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Label fx:id="registrationMessageLabel" layoutX="178.0" layoutY="96.0" text="You need to Register first." textAlignment="CENTER" textFill="#1cd500" textOverrun="CENTER_ELLIPSIS">
         <font>
            <Font name="System Bold Italic" size="18.0" />
         </font>
      </Label>
      <Label fx:id="passwordMatchLabel" layoutX="244.0" layoutY="413.0" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
