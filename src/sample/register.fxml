<AnchorPane prefHeight="623.0" prefWidth="600.0" style="-fx-background-color: #767676;" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.RegisterController">
   <children>
      <AnchorPane prefHeight="80.0" prefWidth="600.0" style="-fx-background-color: #5d5d5d;">
         <children>
            <ImageView fx:id="logoImageView" fitHeight="60.0" fitWidth="60.0" layoutX="14.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../IMAGES/LOGO.png" />
               </image>
            </ImageView>
            <Label layoutX="84.0" layoutY="28.0" text="User Registrations" textFill="WHITE">
               <font>
                  <Font name="Symbol" size="18.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <TextField fx:id="firstnameField" layoutX="85.0" layoutY="149.0" prefHeight="25.0" prefWidth="407.0" promptText="Firstname" />
      <Label layoutX="85.0" layoutY="124.0" text="Firstname" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font></Label>
      <TextField fx:id="lastnameField" layoutX="85.0" layoutY="225.0" prefHeight="25.0" prefWidth="407.0" promptText="Lastname" />
      <Label layoutX="85.0" layoutY="200.0" text="Lastname" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="usernameField" layoutX="85.0" layoutY="299.0" prefHeight="25.0" prefWidth="407.0" promptText="Username" />
      <Label layoutX="85.0" layoutY="274.0" text="Username" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label layoutX="85.0" layoutY="350.0" text="Password" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <PasswordField fx:id="passwordField" layoutX="85.0" layoutY="375.0" prefHeight="25.0" prefWidth="407.0" />
      <Label layoutX="85.0" layoutY="413.0" text="Confirm Password" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <PasswordField fx:id="confirmPasswordField" layoutX="85.0" layoutY="438.0" prefHeight="25.0" prefWidth="407.0" />
      <Button fx:id="registerButton" layoutX="85.0" layoutY="502.0" mnemonicParsing="false" onAction="#registerButtonOnClick" prefHeight="30.0" prefWidth="407.0" style="-fx-background-color: #77f56a;" text="Register">
